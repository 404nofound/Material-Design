<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_dialog_0"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="15dp"
            android:text="SnackBar"

            android:textSize="14sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_dialog_1"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="15dp"
            android:text="Alert Dialog"

            android:textSize="14sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_dialog_2"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"
            android:padding="15dp"
            android:text="Confirmation Dialog"

            android:textSize="14sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_dialog_3"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"

            android:padding="15dp"
            android:text="Single Choice Dialog"

            android:textSize="14sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_dialog_4"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"

            android:padding="15dp"
            android:text="Multi Choice Dialog"

            android:textSize="14sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_dialog_5"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"
            android:padding="15dp"
            android:text="Progress Dialog 1"

            android:textSize="14sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_dialog_6"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"

            android:padding="15dp"
            android:text="Progress Dialog 2"

            android:textSize="14sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_dialog_7"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"

            android:padding="15dp"
            android:text="Date Picker Dialog"

            android:textSize="14sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_dialog_8"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"
            android:padding="15dp"
            android:text="Time Picker Dialog"

            android:textSize="14sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_dialog_9"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"

            android:padding="15dp"
            android:text="Bottom Dialog"

            android:textSize="14sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_dialog_10"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"

            android:padding="15dp"
            android:text="Fullscreen Dialog"

            android:textSize="14sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_dialog_11"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"
            android:padding="15dp"
            android:text="Popup Menu Dialog"

            android:textSize="14sp" />


    </LinearLayout>
</androidx.core.widget.NestedScrollView>